{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "./src",
    "paths": {
      "@styles/*": [
        "styles/*"
      ],
      "@styles": [
        "styles/index"
      ],
      "@interfaces": [
        "interfaces/index"
      ],
      "@interfaces/*": [
        "interfaces/*"
      ],
      "@actions": [
        "redux/actions/index"
      ],
      "@actions/*": [
        "redux/actions/*"
      ],
      "@reducers": [
        "redux/reducers/index"
      ],
      "@reducers/*": [
        "redux/reducers/*"
      ],
      "@store": [
        "redux/store"
      ],
      "@store/*": [
        "redux/*"
      ],
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}